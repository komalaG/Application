<h1>Listing profiles</h1>

<table >
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>Location</th>
     <th>Download Link</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.name %></td>
    <td><%= profile.phone %></td>
    <td><%= profile.location %></td>
     <td><%= button_to "Download profile", profile.attachment_url %></td>
     <td><%= button_to "Delete",  profile, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{profile.name}?" %></td>
    <td><%= button_to 'Show', profile %></td>
    <td><%= button_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= button_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Profile', new_profile_path %>
